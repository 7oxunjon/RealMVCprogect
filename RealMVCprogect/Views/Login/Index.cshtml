@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Registratsiya</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="icon" type="image/png" href="/css/imageFile/Star.png">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/login-form-19/css/style.css">

</head>

<body>
	<section class="ftco-section" style="background-color:white">
		<div class="container">
			<div class="row justify-content-left">
                <div class="col-md-5 text-right mb-5">
					<h2 class="heading-section">Admin Login</h2>
				</div>
			</div>
			<div class="row justify-content-left">
                <div class="col-md-6 col-lg-4 ml-auto" >
                    <!-- ml-auto formani o'ng tomonga itaradi -->
                    <div class="login-wrap py-5" style="background-color:#777f80">
                        <div class="img d-flex align-items-center justify-content-center"
                             style="background-image: url('@Url.Content("~/css/imagefile/bepronorma.jpg")');">
                        </div>
                        <h3 class="text-center mb-0">Xush keldingiz</h3>
                        <p class="text-center">Quyidagi ma'lumotlarni kiritish orqali tizimga kiring</p>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group position-relative">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" id="PasswordHash" class="form-control" name="PasswordHash" placeholder="*******" required>
                                <span style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer; z-index: 2;"
                                    onmousedown="showPassword()"
                                    onmouseup="hidePassword()"
                                    onmouseleave="hidePassword()">
                                    👁️
                                </span>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Forgot Password</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Davom etish</button>
                            </div>
                        }
                    </div>
                </div>


				<div class="col-md-6 justify-content-end align-items-center">
					<img src="~/css/imagefile/раб-стол-11.png" style="height:30% margin: 0; padding: 0;" class="img-fluid" alt="Loading GIF">
					</div>

			</div>
		</div>
	</section>
   <script>
        function showPassword() {
              document.getElementById("PasswordHash").type = "text"; // Parolni ochish
        }

        function hidePassword() {
            document.getElementById("PasswordHash").type = "password"; // Parolni yopish
        }
</script>

	@* <script src="~/css/login-form-19/js/jquery.min.js"></script>
	<script src="~/css/login-form-19/js/popper.js"></script>
	<script src="~/css/login-form-19/js/bootstrap.min.js"></script>
	<script src="~/css/login-form-19/js/main.js"></script> *@
</body>
</html>

