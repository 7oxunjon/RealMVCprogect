@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
				<h2 class="heading-section">Admin Login</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap py-5">
					<div class="img d-flex align-items-center justify-content-center"style="background-image: url('@Url.Content("~/css/imagefile/bepronorma.jpg")');"></div>
					<h3 class="text-center mb-0">Xush keldingiz</h3>
					<p class="text-center">Quyidagi ma'lumotlarni kiritish orqali tizimga kiring</p>
					
						<div class="form-group">
							<div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
							<input type="text" class="form-control" , name="AdminName" placeholder="Username" required>
						</div>
						<div class="form-group">
							<div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
							<input type="password" class="form-control" , name="AdminPassword " placeholder="*******" required>
						</div>
						<div class="form-group d-md-flex">
							<div class="w-100 text-md-right">
								<a href="#">Forgot Password</a>
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn form-control btn-primary rounded submit px-3">Davom etish</button>
						</div>
      			<div class="w-100 text-center mt-4 text">

						<a href="#">Bosh sahifaga o`tish</a>
					</div>
				</div>
			</div>
		</div>
	</div>
