@model EntityLayer.Concreat.Users

@{
    ViewData["Title"] = "UpdateUsers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="d-flex justify-content-center align-items-center" style="height: 80%;">
    <br />
    <div class="col-md-6">
        @using (Html.BeginForm("UpdateUsers", "Users", FormMethod.Post))
        {
            <div class="card p-4 shadow">
                <h2 class="text-center">Фойдаланувчиларни тахрирлаш</h2>

                @Html.Label("Id")
                @Html.TextBoxFor(x => x.id, new { @class = "form-control" })
                <br />

                @Html.Label("Исми")
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @* @Html.ValidationMessageFor(x => x.Name) *@
                <br />

                @Html.Label("Телефон рақам")
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PhoneNumber)
                <br />
                

                @Html.Label("Даражаси")
                @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Position)
                <br />

                @Html.Label("Элеcтрон Почта манзили")
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email)
                <br />

                @Html.Label("Парол")
                @Html.TextBoxFor(x => x.PasswordHash, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PasswordHash)
                @* <br />
                @Html.Label("Yaratilgan Sana")
                @Html.TextBoxFor(x => x.CreatedAt, new { @class = "form-control", @readonly = "readonly" }) *@
                @* @Html.Label("About")
            @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.WriterAbout)
            <br /> *@

                <button class="btn btn-success w-100">Yangilash</button>
            </div>
        }
    </div>
</div>

