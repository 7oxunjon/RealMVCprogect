@model EntityLayer.Concreat.Message
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Compose Message</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <!-- Theme style -->
    <!-- summernote -->
    <link rel="stylesheet" href="~/css/plugins/summernote/summernote-bs4.css">

    <script src="~/css/plugins/summernote/summernote.min.js"></script>
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yangi Xabarlar</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <a href="/Message/NewMessage/" class="btn btn-primary btn-block mb-3">Yangi Xabar Yaratish</a>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Varyatlar</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a href="/Contect/Index/" class="nav-link">
                                        <i class="fas fa-mail-bulk"></i> Aloqa
                                        <span class="badge bg-primary float-right">0</span>
                                    </a>
                                </li>
                                <li class="nav-item active">
                                    <a href="/Message/Inbox/" class="nav-link">
                                        <i class="fas fa-inbox"></i> Kelgan Xabarlar
                                        <span class="badge bg-primary float-right">12</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Message/Sendbox" class="nav-link">
                                        <i class="far fa-envelope"></i> Yuborilgan Xabarlar
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-file-alt"></i> Qoralama Ro`yxat
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="fas fa-filter"></i> Spam
                                        <span class="badge bg-warning float-right">65</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-trash-alt"></i> Karzinka
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Qo`shimcha</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle text-danger"></i>
                                        Muhum
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle text-warning"></i> Aksiya
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-circle text-primary"></i>
                                        Ijtimoiy Tarmoq
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    @using(Html.BeginForm("NewMessage","Message", FormMethod.Post))
                    {
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yangi xabar yaratish</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                                <div class="form-group">
                                    @Html.Label("yuboruvchi")
                                    @Html.TextBoxFor(x=>x.YuboruvchiMail, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(x=>x.YuboruvchiMail)
                                </div>

                            <div class="form-group">
                                    @Html.Label("Name")
                                    @Html.TextBoxFor(x=>x.Qabul_qiluvchiMail, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(x=>x.Qabul_qiluvchiMail)   
                            </div>
                            <div class="form-group">
                                    @Html.Label("Mavzu")
                                    @Html.TextBoxFor(x=>x.Subject, new {@class = "form-control"})
                                    @Html.ValidationMessageFor(x=>x.Subject)      
                            </div>
                            <div class="form-group">
                                @Html.Label("Xabaringiz")
                                <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px">
                                
                    </textarea>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Fayl qo`shish
                                    <input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Qoralama</button>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Yuborish</button>
                            </div>
                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Bekor qilish</button>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    }
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/css/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/css/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/css/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/css/dist/js/demo.js"></script>
    <!-- Summernote -->

    <script src="~/css/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })</script>
</body>
</html>


