@using EntityLayer.Concreat
@model List<News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Янгиликлар Саҳифаси</h1>
                </div>
                <div class="col-sm-6 d-flex justify-content-end">
                    <!-- d-flex va justify-content-end ni qo'lladik -->
                    <a class="btn btn-sm btn-primary" href="/News/AddNews/">AddNewNews</a>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0 d-flex">
                                    <span class="mr-auto">@item.Users.Name</span>
                                    <span>@item.Users.CreatedAt.ToString("dd MMMM yyyy")</span>
                                </div>


                                <div class="card-body pt-3 d-flex flex-column justify-content-center align-items-center position-relative" style="height: 250px; border: 3px dashed #ccc;">
                                    <img id="image-preview"
                                         src="@item.photoNews"
                                         alt="Rasm" class="resizable"
                                         style="max-width: 100%; max-height: 150px; display: @(item.photoNews != null && item.photoNews.Any() ? "block" : "none");">
                                </div>

                                <div class="form-group">
                                    <textarea id="short-news" name="title" class="form-control shadow-lg rounded-5 p-3"
                                              rows="2" placeholder="Yangi yangilik sarlavhasini kiriting...">@item.Title</textarea>
                                </div>


                                <div class="card-footer w-auto">
                                    <div class="text-center">
                                        <a href="/News/GetByIdNew/@item.Id" class="btn btn-sm btn-primary w-100">
                                            <i class="fas fa-user"></i> Таҳрирлаш
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->

</body>
</html>


