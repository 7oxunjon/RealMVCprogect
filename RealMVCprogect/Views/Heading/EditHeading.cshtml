@model EntityLayer.Concreat.Heading
@{
    ViewData["Title"] = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<h1>Yangilash Sahifasi</h1> 
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post)) 
{
    <div class="form-group"> 

        @Html.Label("Sahifa Id") 
        @Html.TextBoxFor(x=>x.HeadingId, new{@class = "form-control"})
        <br /> 
        @Html.Label("Sahifa Nomi") 
        @Html.TextBoxFor(x=>x.HeadingName,new {@class = "form-control"}) 
        <br />
        @Html.Label("Vaqti")
        @Html.TextBoxFor(x=>x.HeadingDate, new {@class = "form-control"})
        <br />
        @Html.Label("Muallif Id")
        @Html.TextBoxFor(x=>x.WriterId, new {@class = "form-control"}) 

        @Html.Label("Category")
        @Html.DropDownListFor(x=>x.CotegoryId,(List<SelectListItem>) ViewBag.vlc, new{@class = "form-control"}) 
        <br />
        <button class="btn btn-success"> Yangilash</button>

    </div>
}
